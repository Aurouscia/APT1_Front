  font-size: 50rpx;
  padding: 20rpx;
  margin: 30rpx;
  background-color: #ffb41a;
  border-radius: 30rpx;
  color:white;
  display: flex;
  justify-content: center;
}
.info{
  padding: 30rpx;
  font-size: large;
}
.tel{
  margin:20rpx 30rpx;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
}
.btn{
  background-color:#07C160 ;
